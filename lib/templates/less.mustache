{{#items}}
@{{prefix}}-{{name}}: {{px.offset_x}}, {{px.offset_y}}, {{px.width}}, {{px.height}};
{{/items}}

.{{prefix}}-sprite-width(@sprite) {
  width: extract(@sprite, 3);
}

.{{prefix}}-sprite-height(@sprite) {
  height: extract(@sprite, 4);
}

.{{prefix}}-sprite-position(@sprite) {
  @sprite-offset-x: extract(@sprite, 1);
  @sprite-offset-y: extract(@sprite, 2);
  background-position: @sprite-offset-x  @sprite-offset-y;
}

.{{prefix}}-sprite(@sprite) {
  .{{prefix}}-sprite-position(@sprite);
  background-repeat: no-repeat;
  overflow: hidden;
  display: block;
  .{{prefix}}-sprite-width(@sprite);
  .{{prefix}}-sprite-height(@sprite);

  {{#sprite}}

    background-image: url('{{{escaped_image}}}?v={{bust}}');
    {{#retina}}
    @media (min--moz-device-pixel-ratio: 1.5), (-o-min-device-pixel-ratio: 3/2), (-webkit-min-device-pixel-ratio: 1.5), (min-device-pixel-ratio: 1.5), (min-resolution: 1.5dppx) {
      background-image: url('{{{escaped_image}}}?v={{bust}}');
      background-size: {{px.total_width}} {{px.total_height}};
    }
    {{/retina}}

  {{/sprite}}
  
}
